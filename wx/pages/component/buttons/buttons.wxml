<!--pages/component/buttons/buttons.wxml-->
<view class="container">

  <view class="content-block">

    <view class="content-block-title">Type</view>

    <button type="default">default</button>
    <button type="primary">primary</button>
    <button type="warn">warn</button>

    <view class="content-block-title">Type Form</view>
    <form onSubmit="onSubmit" onReset="onReset">
      <button form-type="submit">submit</button>
      <button form-type="reset">reset</button>
    </form>

    <view class="content-block-title">Misc</view>

    <button type="primary" plain='plain'>plain</button>
    <button type="default" disabled='disabled'>disabled</button>
    <button type="default" loading='true'>loading</button>

    <view class="content-block-title">Size</view>
    <button type="default" class='rounded-circle'>default size</button>
    <button type="default" class='button-sm rounded-circle'>small size</button>
    <button type="default" size="mini" class='rounded-circle'>mini size</button>

  </view>

</view>
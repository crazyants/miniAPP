        <scroll-view scroll-y="true">
          <view class="content-block">
            <view class="content-block">1</view>
            <view class="content-block">2</view>
            <view class="content-block">3</view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block"></view>
            <view class="content-block">4</view>
            <view class="content-block">5</view>
          </view>
        </scroll-view>
        
      </swiper-item>
      <swiper-item>
        <view class="content-block">B</view>
      </swiper-item>
    </swiper>
    
</view>

/*------------------------------
* utilities
------------------------------*/

.float-left {
  float: left;
}

.float-right {
  float: right;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.clearfix::after {
  display: block;
  content: "";
  clear: both;
}

/* === borders === */

.rounded {
  border-radius: 16rpx;
}

.rounded-circle {
  border-radius: 50%;
}

.rounded-0 {
  border-radius: 0;
}

/* === icons === */

.icon, .icon-sm, .icon-md, .icon-lg {
  display: inline-block;
  vertical-align: middle;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  position: relative;
  line-height: 0;
  margin: 0;
}

.icon {
  width: 48rpx;
  height: 48rpx;
}

.icon-sm {
  width: 32rpx;
  height: 32rpx;
}

.icon-md {
  width: 96rpx;
  height: 96rpx;
}

.icon-lg {
  width: 192rpx;
  height: 192rpx;
}


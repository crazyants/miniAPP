/* === split === */

.split {
  display: flex;
  position: relative;
  align-items: center;
  font-size: 9pt;
  color: rgba(0, 0, 0, 0.54);
}

.split::before, .split::after {
  content: " ";
  flex: 1;
  display: block;
  height: 1px;
  background-color: rgba(0, 0, 0, 0.12);
}

.split::before {
  margin-right: 1em;
}

.split::after {
  margin-left: 1em;
}

/* === colors === */

button[type='primary'], .button-hover[type="primary"] .a-button-primary {
  background-color: #00bbb5 !important;
  border-color: #00bbb5;
}

.link {
  color: #00bbb5;
}

.caption, .desc {
  opacity: 0.54;
}

/* text */

.text-primary {
  color: #00bbb5;
}

.text-success {
  color: #0c0;
}

.text-warning {
  color: #f90;
}

.text-danger {
  color: #f30;
}

.text-white {
  color: #fff;
}

/* bg */

.bg-primary {
  background-color: #00bbb5;
  color: #fff;
}

.bg-success {
  background-color: #0c0;
  color: #fff;
}

.bg-warning {
  background-color: #f90;
  color: #fff;
}

.bg-danger {
  background-color: #f30;
  color: #fff;
}

.bg-white {
  background-color: #fff !important;
  color: rgba(0, 0, 0, 0.87);
}
